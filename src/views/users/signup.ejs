<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>

    <% include ../static/partials/navbar.ejs %>

    <main class="container">
    <% include ../static/partials/messages.ejs %>
      <h1>Sign Up</h1>

  <div class="row">
    <div class="col-md-8">
      <form method="POST" action="/users/signup">

        <div class="form-group">
          <label>Username:</label>
          <input type="text" name="username" placeholder="Enter Username" class="form-control"/>
           <small class="text-muted" id="titleHelp">username must be 5 or more characters in length.</small>
        </div>

        <div class="form-group">
          <label>Email:</label>
          <input type="email" name="email" placeholder="Enter Email" class="form-control"/>
          <small class="text-muted" id="emailHelp">email address must be a valid address</small>
        </div>

        <div class="form-group">
          <label>Password:</label>
          <input type="password" name="password" placeholder="Enter Password" class="form-control"/>
          <small class="text-muted" id="titleHelp">password must be 5 or more characters in length.</small>
        </div>

        <div class="form-group">
          <label>Password:</label>
          <input type="password" name="password_conf" placeholder="Enter Password confirmation" class="form-control"/>
          <small class="text-muted" id="passwordHelp">password confirmatin must match password above</small>
        </div><br/>

        <input type="submit" value="Sign Up" class="btn btn-primary"/>
      </form>
    </div>
  </div>
</main>

 <% include ../static/partials/baseScripts.ejs %>

</body>
</html>
